<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/background"
     tools:context=".activity.MainActivity">

    <ImageView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:visibility="visible"
         android:background="@drawable/shape" />

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_marginBottom="60dp"
         android:orientation="vertical"
         android:id="@+id/main_layout">

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:visibility="visible"
             android:orientation="vertical"
             android:id="@+id/main">

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="visible"
                 android:layout_margin="5dp"
                 app:cardElevation="8dp"
                 app:cardUseCompatPadding="true"
                 app:cardBackgroundColor="@color/card_background"
                 app:cardCornerRadius="4dp"
                 app:contentPadding="16dp"
                 android:layout_gravity="right"
                 android:id="@+id/cv_info">

                <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:gravity="center"
                             android:fontFamily="@font/agency"
                             android:textSize="18dp"
                             android:textColor="@color/white"
                             android:layout_weight="70"
                             android:layout_gravity="center"
                             android:text="@string/subscription_time" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="35dp"
                         android:layout_width="match_parent"
                         android:orientation="horizontal">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="0dp"
                             android:gravity="center"
                             android:orientation="vertical"
                             android:layout_weight="1">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="14sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 tools:ignore="HardcodedText"
                                 android:id="@+id/tv_d"
                                 android:text="000" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:fontFamily="@font/agency_bold"
                                 android:textSize="11sp"
                                 android:textColor="#ffffff"
                                 android:layout_marginTop="2dp"
                                 android:text="Day" />

                        </LinearLayout>

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="14sp"
                             android:textColor="#ffffff"
                             android:text=":" />

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="0dp"
                             android:gravity="center"
                             android:orientation="vertical"
                             android:layout_weight="1">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="14sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:id="@+id/tv_h"
                                 android:text="00" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="11sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:layout_marginTop="2dp"
                                 android:text="Hours" />

                        </LinearLayout>

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="14sp"
                             android:textColor="#ffffff"
                             android:text=":" />

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="0dp"
                             android:gravity="center"
                             android:orientation="vertical"
                             android:layout_weight="1">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="14sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:id="@+id/tv_m"
                                 android:text="00" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="11sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:layout_marginTop="2dp"
                                 android:text="Minute" />

                        </LinearLayout>

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="14sp"
                             android:textColor="#ffffff"
                             android:text=":" />

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="0dp"
                             android:gravity="center"
                             android:orientation="vertical"
                             android:layout_weight="1">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="14sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:id="@+id/tv_s"
                                 android:text="00" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="11sp"
                                 android:fontFamily="@font/agency_bold"
                                 android:textColor="#ffffff"
                                 android:layout_marginTop="2dp"
                                 android:text="Seconds" />

                        </LinearLayout>

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:visibility="gone"
                             android:gravity="center"
                             android:textSize="9dp"
                             android:textColor="@color/white"
                             android:typeface="monospace"
                             android:layout_weight="70"
                             android:id="@+id/exdate"
                             android:layout_gravity="center"
                             android:text="@string/expired" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 app:cardElevation="8dp"
                 app:cardUseCompatPadding="true"
                 app:cardBackgroundColor="@color/card_background"
                 app:cardCornerRadius="4dp"
                 app:contentPadding="16dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:layout_marginBottom="5dp"
                     android:padding="5dp"
                     android:orientation="horizontal">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:gravity="left"
                         android:fontFamily="@font/bold"
                         android:textSize="16dp"
                         android:textColor="@color/white"
                         android:layout_weight="70"
                         android:layout_gravity="center"
                         android:text="@string/game_list" />
                    <ImageView
                         android:layout_height="25dp"
                         android:layout_width="25dp"
                         android:visibility="gone"
                         android:src="@drawable/send"
                         android:tint="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:background="@android:color/transparent"
                     android:id="@+id/recyclerview" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:visibility="gone"
             android:orientation="vertical"
             android:layout_marginTop="20dp"
             android:id="@+id/setting">

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="gone"
                 android:layout_margin="5dp"
                 app:cardElevation="8dp"
                 app:cardUseCompatPadding="true"
                 app:cardBackgroundColor="@color/card_background"
                 app:cardCornerRadius="4dp"
                 app:contentPadding="16dp"
                 android:layout_gravity="right">

                <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:gravity="left"
                             android:fontFamily="@font/agency"
                             android:textSize="18dp"
                             android:textColor="@color/white"
                             android:layout_weight="70"
                             android:layout_gravity="center"
                             android:text="@string/settings" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="visible"
                 android:layout_margin="5dp"
                 app:cardElevation="8dp"
                 app:cardUseCompatPadding="true"
                 app:cardBackgroundColor="@color/card_background"
                 app:cardCornerRadius="4dp"
                 app:contentPadding="16dp"
                 android:layout_gravity="right">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="5dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginBottom="10dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:gravity="left"
                             android:fontFamily="@font/bold"
                             android:textSize="15dp"
                             android:textColor="@color/white"
                             android:layout_weight="70"
                             android:layout_gravity="center"
                             android:text="@string/settings" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="5dp"
                         android:orientation="vertical">

                        <Switch
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:gravity="left"
                             android:fontFamily="@font/agency_bold"
                             android:textSize="16sp"
                             android:textColor="@color/white"
                             style="@style/AppTheme.SwitchPreference"
                             android:id="@+id/sw_hide_root"
                             android:layout_gravity="center"
                             android:text="Hide Root" />

                        <Switch
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:gravity="left"
                             android:fontFamily="@font/agency_bold"
                             android:textSize="16sp"
                             android:textColor="@color/white"
                             style="@style/AppTheme.SwitchPreference"
                             android:id="@+id/sw_anti_crash"
                             android:layout_gravity="center"
                             android:text="Anti Crash" />

                        <Switch
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:fontFamily="@font/agency_bold"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            style="@style/AppTheme.SwitchPreference"
                            android:id="@+id/hide_recorder"
                            android:layout_gravity="center"
                            android:text="Hide Recorder" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginBottom="10dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:gravity="left"
                             android:fontFamily="@font/bold"
                             android:textSize="15dp"
                             android:textColor="@color/white"
                             android:layout_weight="70"
                             android:layout_gravity="center"
                             android:text="Other" />

                    </LinearLayout>

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="5dp"
                         android:textSize="14sp"
                         android:textColor="#FFFFFF"
                         android:singleLine="true"
                         android:layout_gravity="center"
                         android:background="@drawable/no_back"
                         android:gravity="left"
                         android:fontFamily="@font/agency_bold"
                         android:layout_weight="33.33"
                         android:id="@+id/checkUpdate"
                         android:text="Check Update"
                         android:textStyle="normal" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="5dp"
                         android:textSize="14sp"
                         android:textColor="#FFFFFF"
                         android:singleLine="true"
                         android:layout_gravity="center"
                         android:background="@drawable/no_back"
                         android:gravity="left"
                         android:fontFamily="@font/agency_bold"
                         android:layout_weight="33.33"
                         android:id="@+id/logOut"
                         android:text="SignOut"
                         android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="visible"
                 android:layout_margin="5dp"
                 app:cardElevation="8dp"
                 app:cardUseCompatPadding="true"
                 app:cardBackgroundColor="@color/card_background"
                 app:cardCornerRadius="4dp"
                 app:contentPadding="16dp"
                 android:layout_gravity="right">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="5dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginBottom="10dp"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:gravity="left"
                             android:fontFamily="@font/bold"
                             android:textSize="15dp"
                             android:textColor="@color/white"
                             android:layout_weight="70"
                             android:layout_gravity="center"
                             android:text="Additional applications" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:src="@drawable/icon_katana"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/facebook" />

                        <ImageView
                            android:layout_height="55dp"
                            android:layout_width="55dp"
                            android:src="@drawable/icon_twitter"
                            android:layout_marginStart="20dp"
                            android:id="@+id/twitter" />

                        <ImageView
                            android:layout_height="55dp"
                            android:layout_width="55dp"
                            android:src="@drawable/icon_wechat"
                            android:layout_marginStart="20dp"
                            android:id="@+id/wechat" />

                        <ImageView
                            android:layout_height="55dp"
                            android:layout_width="55dp"
                            android:src="@drawable/icon_qq"
                            android:layout_marginStart="20dp"
                            android:id="@+id/qq" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="fill_parent"
         android:gravity="bottom"
         android:orientation="horizontal"
         app:layout_constraintBaseline_toBottomOf="@id/main_layout">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="gone"
                 android:layout_above="@id/bttom"
                 android:forceDarkAllowed="true"
                 android:id="@+id/progress" />

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 app:cardBackgroundColor="@color/card_background"
                 android:layout_marginTop="0dp"
                 app:contentPadding="8dp"
                 android:id="@+id/bttom">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:weightSum="100"
                     android:orientation="horizontal">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:layout_weight="50"
                         android:id="@+id/layout_dashboard">

                        <ImageView
                             android:layout_height="32dp"
                             android:layout_width="32dp"
                             android:src="@mipmap/ic_dashboard"
                             android:id="@+id/icon_dashboard" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:textAlignment="center"
                             android:fontFamily="@font/agency_bold"
                             android:textSize="16sp"
                             android:textColor="@color/white"
                             android:id="@+id/txt_dashboard"
                             android:text="@string/dashboard" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:layout_weight="50"
                         android:id="@+id/layout_setting">

                        <ImageView
                             android:layout_height="32dp"
                             android:layout_width="32dp"
                             android:src="@mipmap/ic_settings_adaptive_fore"
                             android:id="@+id/icon_setting" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:textAlignment="center"
                             android:fontFamily="@font/agency_bold"
                             android:textSize="16sp"
                             android:textColor="@color/grey"
                             android:id="@+id/txt_setting"
                             android:text="@string/settings" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>